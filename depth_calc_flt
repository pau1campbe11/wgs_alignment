}' f2post_depth_updated.txt > > f2post_filtered_95ci.txt

################ FARM2 PRE 95% CI (FILTERED DATASET)

awk 'NR > 1 {
  x[NR] = $3;
  sum += $3;
  sumsq += $3^2
}
